  <script>
    // Gör Enter/Space på knappen mer förutsägbart för tangentbordsanvändare
    document.addEventListener('DOMContentLoaded', () => {
      const goto = document.getElementById('gotoMorjens');
      if (!goto) return;
      goto.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); goto.click(); }
      });
    });
  </script>
